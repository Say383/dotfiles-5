[SpamFilter]
[KillThreadsFilter]
[SentMailsFilter]
sent_tag = sent
[ArchiveSentMailsFilter]
[MeFilter]
me_tag = me

[Filter.0]
message = Tagging archives
query = folder:archives and not (folder:inbox or tag:archived)
tags = +archived;-inbox

[Filter.1]
message = Tagging inbox
query = folder:inbox and not tag:inbox
tags = +inbox;-archived

[Filter.2]
message = Tagging drafts
query = folder:drafts and not tag:draft
tags = +draft;-new

[Filter.3]
message = Tagging trash
query = (folder:trash OR tag:deleted) and not tag:deleted
tags = +deleted;-archived;-inbox;-new

[Filter.4]
message = Tagging work
query = folder:work and not tag:work
tags = +work;-new

[Filter.5]
message = Tagging emacs
query = folder:list/emacs and not tag:emacs
tags = +emacs;-new

[Filter.6]
message = Tagging riscv
query = folder:list/riscv and not tag:riscv
tags = +riscv;-new

[Filter.7]
message = Tagging IEEE-cass
query = folder:list/ieeecass and not tag:ieee
tags = +ieee;-new

[Filter.8]
message = Tagging archlinux
query = folder:list/archlinux and not tag:archlinux
tags = +archlinux;-new

[Filter.9]
message = Tagging spam
query = folder:spam and not tag:spam
tags = +spam;-new;-inbox;-archived

[Filter.10]
message = Tagging notmuch
query = folder:list/notmuch and not tag:notmuch
tags = +notmuch;-new

[Filter.11]
message = Tagging unread sent
query = (folder:sent AND tag:unread) and not tag:inbox
tags = +inbox;-new

[Filter.12]
message = Tagging newsfeed
query = to:me+newsfeed@benmezger.nl and not tag:newsfeed
tags = +newsfeed;-new;

# this requires 'index.header.List List-Id'
# see: https://notmuchmail.org/faq/#index8h2
[Filter.13]
message = Tagging lists
query = list:
tags = +list

[Filter.14]
message = Tagging patches
query = mimetype:text/x-patch
tags = +patch

[Filter.15]
message = Tagging PDFs
query = mimetype:application/pdf
tags = +pdf

[Filter.16]
message = Tagging linux-riscv
query = folder:list/linux-riscv and not (tag:linux and tag:linux-rv)
tags = +linux-rv;+linux;+riscv;-new

[MailMover]
folders = inbox archives trash spam
rename = True
max_age = 15
# rules
inbox = '(NOT tag:inbox AND NOT tag:deleted) OR tag:archived':archives 'tag:deleted':trash 'tag:spam':spam
archives = 'folder:inbox':inbox 'tag:deleted':trash 'tag:spam':spam
trash = 'not tag:deleted and folder:trash':archives 'tag:spam':spam
spam = 'not tag:spam and folder:spam':archives
